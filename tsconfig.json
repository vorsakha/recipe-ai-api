{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@validators/*": [
        "src/validators/*"
      ],
      "@docs/*": [
        "src/docs/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    },
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  },
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "index.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
