{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@support/*": [
        "src/modules/support/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
    },
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  },
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "index.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
